# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def countNodes(self, root):
        """
        :type root: TreeNode
        :rtype: int
        """
        if not root:
            return 0
        
        left = 1
        node = root.left
        while node:
            node = node.left
            left += 1
            
        right = 1
        node = root.right
        while node:
            node = node.right
            right += 1
        
        if left == right:
            return (2**left)-1
        
        return self.countNodes(root.left) + 1 + self.countNodes(root.right)
        
        
        
