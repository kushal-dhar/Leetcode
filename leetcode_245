class Solution(object):
    def shortestWordDistance(self, words, word1, word2):
        """
        :type words: List[str]
        :type word1: str
        :type word2: str
        :rtype: int
        """
        dic = collections.defaultdict(list)
        
        for i, word in enumerate(words):
            dic[word].append(i)
        
        res = sys.maxint
        if word1 == word2:
            i = 0
            while i < len(dic[word1])-1:
                res = min(res, dic[word1][i+1] - dic[word1][i])
                i += 1
            return res
        
        for pos1 in dic[word1]:
            for pos2 in dic[word2]:
                res = min(res, abs(pos1-pos2))
        
        return res        
